{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
  }
}